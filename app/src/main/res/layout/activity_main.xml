<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#151719"
        android:id="@+id/root_view"
        tools:context="com.example.filmsearch.views.MainActivity">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <EditText
            android:drawableStart="@drawable/search"
            android:drawablePadding="20dp"
            android:textSize="15sp"
            android:id="@+id/search_film"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="45dp"
            android:singleLine="true"
            android:hint="@string/search_hint"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/background_search"
            android:gravity="center_vertical"
            tools:ignore="MissingConstraints"/>

    <RelativeLayout android:layout_below="@id/search_film"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/list_layout">
    <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:indicatorColor="#004FFF"
            android:indeterminate="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/linear_indicator"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/list_films"
            android:divider="@null"
            android:scrollbars="none"
            
            tools:ignore="MissingConstraints"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorColor="#004FFF"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:id="@+id/circular_indicator_main"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nothing_found_layout"
            android:visibility="gone"
            android:layout_centerInParent="true">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/image_view_nothing_found"
                android:src="@drawable/nothing_found_search"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_nothing_found"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="#B4B4B4"
                android:layout_below="@id/image_view_nothing_found"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_connection_layout"
                    android:visibility="gone"
                    android:layout_centerInParent="true">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/no_connection_image"
                        android:src="@drawable/no_connection"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_connection"
                        android:textSize="16sp"
                        android:layout_margin="20dp"
                        android:textAlignment="center"
                        android:layout_centerHorizontal="true"
                        android:textColor="#B4B4B4"
                        android:layout_below="@id/no_connection_image"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>